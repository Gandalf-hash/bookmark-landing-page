{  
  "compilerOptions": {  
    "target": "es5",  
    "lib": ["dom", "dom.iterable", "esnext"],  
    "allowJs": true,  
    "skipLibCheck": true,  
    "strict": true,  
    "forceConsistentCasingInFileNames": true,  
    "noEmit": true,  
    "esModuleInterop": true,  
    "module": "commonjs",  
    "moduleResolution": "node",  
    "resolveJsonModule": true,  
    "isolatedModules": true,  
    "jsx": "react-jsx", // Change this based on your React version  
    "baseUrl": ".", // Optional: Helps with resolving paths (e.g., `@/lib`).  
    "paths": {  
      "@/*": ["src/*"] // This allows for aliasing imports  
    }  
  },  
  "include": ["src/**/*"],  
  "exclude": ["node_modules", "**/*.spec.ts"]  
}